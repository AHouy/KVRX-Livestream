{
  "manifest_version": 2,

  "name": "KVRX Livestream",
  "description": "Listen to KVRX with the click of a button!",
  "version": "1.0",
  "permissions": ["http://kvrx.org/"],

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  }

}